{
	"title": "JSON Schema for Hedy Quiz",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"quiz_title": {
			"type": "string",
			"description": "Short title of the quiz"
		},
		"level": {
			"type": "integer",
			"description": "Short title of the quiz"
		},
		"questions": {
			"type": "array",
			"description": "Questions for the Hedy Quiz, key/value map",
			"additionalProperties": {
				"$ref": "#/Question"
			}
		}
	},
	"required": ["level", "questions", "quiz_title"],
	
		
		

	"Question": {
		"type": "object",
		"properties": {
			"question_text": {
				"type": "string"
			},
			"code": {
				"type": "string"
			},
			"mp_choice_answers": {
				"type": "array",
				"items": {
					"type": "string",
					"minItems": 2,
					"maxItems": 4
				}
			},
			"correct_answer": {
				"type": "string",
				"enum": ["A", "B", "C", "E"]
			},
			"explanation": {
				"type": "string"
			},
			"question_score": {
				"type": "integer"
			}
		},
		"required": ["question_text", "mp_choice_answers", "correct_answer", "question_score"],
		"additionalProperties": false


	}
}