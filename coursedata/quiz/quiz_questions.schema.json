{
	"title": "JSON Schema for Hedy Quiz",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"level": {
			"type": "integer",
			"description": "Level number of the quiz"
		},
		"questions": {
			"type": "array",
			"description": "Questions for the Hedy Quiz, key/value map",
			"additionalProperties": {
				"$ref": "#/Question"
			}
		}
	},
	"required": ["level", "questions", "quiz_title"],

	"Question": {
		"type": "object",
		"properties": {
			"question_text": {
				"type": "string"
			},
			"code": {
				"type": "string"
			},
			"mp_choice_options": {
				"type": "array",
				"items": {
					"type": "string",
					"minItems": 2
				}
			},
			"correct_answer": {
				"type": "string",
				"enum": ["A", "B", "C", "D"]
			},
			"hint": {
				"type": "string"
			},
			"question_score": {
				"type": "integer"
			}
		},
		"required": ["question_text", "mp_choice_options", "correct_answer", "question_score"],
		"additionalProperties": false
	}
}